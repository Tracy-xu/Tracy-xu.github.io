.st-search-input {
  width: 195px;
  height: 30px;
  padding: 5px;
  color: #333;
}

.local-search {
  position: relative;
  text-align: left;
  margin-bottom: 10px;
}

.local-search-input-cls {
  width: 200px;
  margin: 10px 0;
  padding: 8px 12px;
  border-radius: 4px;
  border: 1px solid #CCC;
  color: #666;
  font-size: 14px;
}

#local-search-close {
  content: 'x';
  display: flex;
  position: absolute;
  width: 20px;
  height: 20px;
  right: 10px;
  top: 10px;
  background: #fff;
  color: #888;
  border-radius: 100%;
  text-align: center;
  font-size: 16px;
  font-family: consolas;
  border: 1px solid #CCC;
  cursor: pointer;
  font-style: normal;
  font-weight: normal;
  transform: rotate(0);
  transform-origin: center center;
  transition: all 0.3s;
  justify-content: center;
  line-height: 1;
  
  &:hover {
    border-color: #666;
    color: #222;
    transform: rotate(180deg);
  }
}

.local-search-result-cls {
  position: fixed;
  z-index: 99;
  width: 400px;
  top: 50px;
  right: 0;
  .local-search-empty {
    color: #888;
    line-height: 44px;
    text-align: center;
    display: block;
    font-size: 16px;
    font-weight: normal;
  }
  ul {
    max-height: 450px;
    min-height: 0;
    height: auto;
    overflow-y: auto;
    border: 1px solid #CCC;
    padding: 10px 20px !important;
    background: #FFF;
    box-shadow: 1px 2px 4px #CCC;
    li {
      text-align: left;
      border-bottom: 1px solid #CCC;
      padding-bottom: 20px;
      margin-bottom: 20px;
      line-height: 30px;
      font-weight: normal;
      &:last-child {
        border-bottom: none;
        margin-bottom: 0;
      }
      a {
        margin-top: 20px;
        font-size: 16px;
        color: #4e8cec !important;
      }
      p {
        margin-top: 10px;
        font-size: 14px;
        max-height: 124px;
        overflow: hidden;
        color: #333;
      }
      em.search-keyword {
        color: #e58c7c;
      }
    }
  }

  @media $xs {
    width: 100%;
    top: 0;
  }
}

.local-search-plugin {
  .local-search-input-cls {
    opacity: 0.6;
    width: 160px;
    transition: all 0.3s;
    &:hover {
      opacity: 1;
      width: 200px;
      transition: all 0.3s;
    }
  }
  .icon {
    position: relative;
    left: -30px;
    color: #999;
    cursor: pointer;
  }
}
